# Database Configuration (GCP Cloud SQL)
DB_HOST=localhost  # Cloud SQL Proxy 사용 시
# DB_HOST=your-project-id:asia-northeast3:your-sql-instance  # 쿠버네티스에서 직접 연결 시
DB_NAME=recipe_db
DB_USER=your_gcp_service_account@gcp-sa-cloud-sql.iam.gserviceaccount.com
DB_PASSWORD=your_gcp_sql_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key

# Node Environment
NODE_ENV=development

# GCP Cloud Storage Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=your-storage-bucket-name
GCP_STORAGE_FOLDER=images
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# External API Keys
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# GCP Artifact Registry Configuration
GCP_REGISTRY_URL=asia-northeast3-docker.pkg.dev/your-project-id/your-repo-name
IMAGE_TAG=latest

# Example for different environments:
# Development: GCP_REGISTRY_URL=asia-northeast3-docker.pkg.dev/your-project-id/dev-repo
# Production: GCP_REGISTRY_URL=asia-northeast3-docker.pkg.dev/your-project-id/prod-repo 